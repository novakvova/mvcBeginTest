@model IList<Baton.Models.ProductModel>

<h1 class="mt-3 text-center">
    Bakery
</h1>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card w-auto p-3">
                
                    <img class="card-img-top" src="@p.Image" alt="Фото Семена">
                
                <div class="card-body">
                    <p class="card-text">
                        @p.Name
                    </p>
                </div>
            </div>
        </div>
    }

</div>
